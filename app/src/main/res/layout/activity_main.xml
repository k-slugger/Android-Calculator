<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shubham.yocalc.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:text="✓"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="22dp"
            android:background="@android:color/transparent"
            android:id="@+id/done"
            android:layout_gravity="right"/>

        <TextView
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="15dp"
            android:textSize="40sp"
            android:gravity="left"
            android:id="@+id/numContainer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/seven"
                android:text="7"
                android:textSize="18sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/eight"
                android:text="8"
                android:textSize="18sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/nine"
                android:text="9"
                android:textSize="18sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:text="+"
                android:id="@+id/add"
                android:textSize="25sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/four"
                android:text="4"
                android:textSize="18sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/five"
                android:text="5"
                android:textSize="18sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/six"
                android:text="6"
                android:textSize="18sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/sub"
                android:text="−"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/one"
                android:text="1"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/two"
                android:text="2"
                android:textSize="18sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/three"
                android:text="3"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/mul"
                android:text="×"
                android:textSize="25sp"
                android:layout_width="0dp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/clr"
                android:text="C"
                android:textSize="22sp"
                android:layout_width="0dp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/zero"
                android:text="0"
                android:textSize="18sp"
                android:layout_width="0dp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/ans"
                android:text="="
                android:textSize="25sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <Button
                android:id="@+id/div"
                android:text="÷"
                android:textSize="25sp"
                android:scaleX="1.1"
                android:scaleY="1.2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
